<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tari.dao.relationDao.Rel_PersGiuridica_DichiarazionDao">

	<sql id="orderBy">
		<if test="orderBy != null">
  <![CDATA[ order by $orderBy$]]>
		</if>
	</sql>

	<sql id="condition">
		WHERE 1=1
		<if test="iddichiarazione != null ">
			AND IDDICHIARAZIONE = #{iddichiarazione}
		</if>
		<if test="idpersonagiuridica != null ">
			AND IDPERSONAGIURIDICA = #{idpersonagiuridica}
		</if>
	</sql>
	<insert id="insert">
		insert into REL_PERSGIURIDICA_DICHIARAZION (
		IDDICHIARAZIONE,
		IDPERSONAGIURIDICA) 
		VALUES (
		#{iddichiarazione},
		#{idpersonagiuridica})
	</insert>

	<sql id="load">
		SELECT * FROM REL_PERSGIURIDICA_DICHIARAZION
		<include refid="condition" />
	</sql>

	<select id="count" resultType="Integer">
		<include refid="dao.common.prePage" />
		<include refid="load" />
		<include refid="dao.common.postPage" />
	</select>

	<update id="update">
		update REL_PERSGIURIDICA_DICHIARAZION set
		IDDICHIARAZIONE = #{iddichiarazione},
		IDPERSONAGIURIDICA = #{idpersonagiuridica}
		WHERE 1=1
	</update>

	<select id="loadAll" resultType="tari.model.relationModel.Rel_PersGiuridica_Dichiarazion">
		<include refid="dao.common.prePage" />
		<include refid="load" />
		<include refid="dao.common.postPage" />
	</select>

	<delete id="delete">
		delete from REL_PERSGIURIDICA_DICHIARAZION
		WHERE IDDICHIARAZIONE = #{iddichiarazione}
			AND IDPERSONAGIURIDICA = #{idpersonagiuridica}
	</delete>
</mapper>