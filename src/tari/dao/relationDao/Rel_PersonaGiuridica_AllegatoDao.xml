<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tari.dao.relationDao.Rel_PersonaGiuridica_AllegatoDao">
	<sql id="orderBy">
		<if test="orderBy != null">
  <![CDATA[ order by $orderBy$]]>
		</if>
	</sql>

	<sql id="condition">
		WHERE 1=1
		<if test="idPersonaGiuridica != null ">
			AND IDPERSONAGIURIDICA = #{idPersonaGiuridica}
		</if>
		<if test="idAllegato != null ">
			AND IDALLEGATO = #{idAllegato}
		</if>
	</sql>
	<insert id="insert">
		insert into REL_PERSONAGIURIDICA_ALLEGATO (
		IDPERSONAGIURIDICA,
		IDALLEGATO) 
		VALUES (
		#{idPersonaGiuridica},
		#{idAllegato})
	</insert>

	<sql id="load">
		SELECT * FROM REL_PERSONAGIURIDICA_ALLEGATO
		<include refid="condition" />
	</sql>

	<select id="count" resultType="Integer">
		<include refid="dao.common.prePage" />
		<include refid="load" />
		<include refid="dao.common.postPage" />
	</select>

	<update id="update">
		update REL_PERSONATARI_ALLEGATO set
		IDPERSONATARI = #{idPersonaTari},
		IDALLEGATO = #{idAllegato},
		WHERE 1=1
	</update>

	<select id="loadAll" resultType="tari.model.relationModel.Rel_PersonaGiuridica_Allegato">
		<include refid="dao.common.prePage" />
		<include refid="load" />
		<include refid="dao.common.postPage" />
	</select>

	<delete id="delete">
		delete from REL_PERSONAGIURIDICA_ALLEGATO
		WHERE IDPERSONAGIURIDICA = #{idPersonaGiuridica} AND
		IDALLEGATO = #{idAllegato}
	</delete>
</mapper>