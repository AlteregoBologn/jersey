<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tari.dao.relationDao.Rel_PersonaTari_PersonaGiuridicaDao">
	<sql id="orderBy">
		<if test="orderBy != null">
  <![CDATA[ order by $orderBy$]]>
		</if>
	</sql>

	<sql id="condition">
		WHERE 1=1
		<if test="idPersTari != null ">
			AND IDPERSTARI = #{idPersTari}
		</if>
		<if test="idPersGiur != null ">
			AND IDPERSGIUR = #{idPersGiur}
		</if>
	</sql>
	<insert id="insert">
		insert into REL_PERSONATARI_PERSGIURIDICA (
		IDPERSTARI,
		IDPERSGIUR) 
		VALUES (
		#{idPersTari},
		#{idPersGiur})
	</insert>

	<sql id="load">
		SELECT * FROM REL_PERSONATARI_PERSGIURIDICA
		<include refid="condition" />
	</sql>

	<select id="count" resultType="Integer">
		<include refid="dao.common.prePage" />
		<include refid="load" />
		<include refid="dao.common.postPage" />
	</select>

	<update id="update">
		update REL_PERSONATARI_PERSGIURIDICA set
		IDPERSTARI = #{idPersTari},
		IDPERSGIUR = #{idPersGiur},
		WHERE 1=1
	</update>

	<select id="loadAll" resultType="tari.model.relationModel.Rel_PersonaTari_PersonaGiuridica">
		<include refid="dao.common.prePage" />
		<include refid="load" />
		<include refid="dao.common.postPage" />
	</select>

	<delete id="delete">
		delete from REL_PERSONATARI_PERSGIURIDICA
		WHERE IDPERSTARI = #{idPersTari} AND
		IDPERSGIUR = #{idPersGiur}
	</delete>
</mapper>