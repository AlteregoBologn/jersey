	<sql id="condition">
		<if test="unid != null">
			AND unid = #{unid}
		</if>
		<if test="descrizione != null">
			AND descrizione = #{descrizione}
		</if>
	</sql>

	<sql id="load" >
		SELECT * from t_esenzione
		WHERE 1=1
		<include refid="condition"></include>
	</sql>
	
	<select id="cerca" resultType="model.Esenzione">
		<include refid="dao.common.prePage"></include>
		<include refid="load"></include>
		<include refid="dao.common.postPage"></include>
		<include refid="dao.common.orderBy"></include>
	</select>
	
	<select id="count" resultType="Integer">
		<include refid="dao.common.preCount"></include>
		<include refid="load"></include>
		<include refid="dao.common.postCount"></include>
	</select>
	
	<insert id="insert">
		<selectKey keyProperty="unid" resultType="int" order="BEFORE">
			SELECT seq.nextval from dual
		</selectKey>
		INSERT into t_esenzione( unid, descrizione) 
		VALUES(#{unid},
		#{descrizione})
	</insert>

	<update id="update">
		UPDATE t_esenzione SET descrizione=#{descrizione}
		WHERE unid=#{unid}
	</update>

	<delete id="delete">
		DELETE FROM t_esenzione WHERE
		unid=#{unid}
	</delete>
	
</mapper> 